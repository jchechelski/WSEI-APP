<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
		id          = "WSEI-APP"
        version     = "1.0.0" >

    <name>World Tracker</name>
    <description>Track your parcel by our World Tracker App</description>
    <author href="https://github.com/jchechelski/WSEI-APP" email="chechelskii@gmail.com">
		J. Chechelski, M. Kapa≈Ça
	</author>
	<content src="index.html" />
	
	<plugin name="cordova-plugin-device" spec="~1.1.4" />
	<plugin name="cordova-plugin-dialogs" spec="~1.3.1" />
	<plugin name="cordova-plugin-network-information" spec="~1.3.2" />
	<plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
	<plugin name="cordova-plugin-wkwebview-engine" spec="~1" source="npm" />
	
	<access origin="*" />
    <allow-navigation href="*"/>
    
    <preference name="orientation" value="portrait" />
    
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>




<splash src="splash.png" />

</widget>